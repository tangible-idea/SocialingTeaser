{
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "routes": [
    { "src": "/admin", "dest": "/index.html" },
    { "src": "/profile", "dest": "/index.html" },
    { "src": "/form", "dest": "/index.html" },
    { "src": "/login", "dest": "/index.html" },
    { "src": "/(.+)", "dest": "/index.html" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ]
}
